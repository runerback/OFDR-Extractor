<Window x:Class="Extractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="12" />
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" Content="{Binding OperationsView, Mode=OneWay}" />
        <ContentControl Grid.Row="1" Content="{Binding FileMapManagerView, Mode=OneWay}" />
        <ContentControl Grid.Row="2" Content="{Binding StatusView, Mode=OneWay}" />
    </Grid>
</Window>
